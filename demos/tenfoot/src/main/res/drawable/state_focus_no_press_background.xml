<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state-->
    <item android:state_enabled="false" android:drawable="@android:color/transparent" />

    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#A1A4C7CA" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="8dp" android:topRightRadius="8dp" />
        </shape>
    </item>

    <!-- enabled state / default state-->
    <item android:state_enabled="true" android:drawable="@android:color/transparent" />
</selector>