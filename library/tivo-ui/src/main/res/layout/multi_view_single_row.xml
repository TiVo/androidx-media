<?xml version="1.0" encoding="UTF-8"?>
<!--
  Template (merge) layout for the MultiExoPlayerView.  To use this declare an instance in your
  own applications layout like:

    <com.tivo.exoplayer.library.multiview.MultiExoPlayerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"/>

  The MultiExoPlayerView merge inflates this layout and use it as a template for a single row
  of PlayerViews.  Currently only two PlayerViews are supported side by side, but would be easy to
  change.

-->

<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="horizontal">

  <!-- exact top/bottom margins are calculated in the MultiExoPlayerView overwritting these values  -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:id="@+id/two_player_views_sidebyside">

    <com.tivo.exoplayer.library.multiview.MultiViewPlayerView
      android:id="@+id/player_view_one"
      android:focusable="true"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      app:player_layout_id="@layout/multi_exo_player_view"
      app:use_controller="false" />

    <com.tivo.exoplayer.library.multiview.MultiViewPlayerView
      android:id="@+id/player_view_two"
      android:focusable="true"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      app:player_layout_id="@layout/multi_exo_player_view"
      app:use_controller="false" />

  </LinearLayout>
</merge>
