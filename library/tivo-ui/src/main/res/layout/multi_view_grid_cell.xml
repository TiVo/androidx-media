<?xml version="1.0" encoding="utf-8"?>
<!--
  The MultiExoPlayerView merge inflates this layout into the multi_view_grid layout for
  each PlayerView grid cell
-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <com.tivo.exoplayer.library.multiview.MultiViewPlayerView
    android:id="@+id/player_view_template"
    android:focusable="true"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:player_layout_id="@layout/multi_exo_player_view"
    app:use_controller="false"/>
</merge>
