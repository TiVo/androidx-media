<?xml version="1.0" encoding="utf-8"?>
<!--
  Template (merge) layout for a grid cell in the multi_view_grid layout for the MultiExoPlayerView.
  To use this declare an instance in your own applications layout like:

    <com.tivo.exoplayer.library.multiview.MultiExoPlayerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"/>

  And specify more than one row of PlayerView's in your MultiPlayerView call to create the
  grid cells.  The grid cells are dynamically added to the GridLayout in the MultiPlayerView
  using the template in multi_view_grid_cell.xml.
-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="horizontal">

  <LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
      android:id="@+id/player_grid_layout"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:keepScreenOn="true"
      android:rowCount="0"
      android:columnCount="0"
      tools:ignore="UselessParent"> <!-- LinearLayout is used to have a common Layout class for MultiPlayerView -->

      <!-- cells are added dynamically, based on grid_player_view_cell layout -->
    </GridLayout>
  </LinearLayout>
</merge>