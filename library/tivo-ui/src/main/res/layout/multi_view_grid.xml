<?xml version="1.0" encoding="utf-8"?>
<!--
  This is the layout template for a single PlayerView in a MultiExoPlayerView.  The parent
  GridLayout is only used as a sample container for the player_view_template.  This template
  is inflated and the resulting PlayerView child is removed and inserted in the MultiExoPlayerView
-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="horizontal">

  <LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <GridLayout
      android:id="@+id/player_grid_layout"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:keepScreenOn="true"
      android:rowCount="2"
      android:columnCount="2"
      tools:ignore="UselessParent"> <!-- LinearLayout is used to have a common Layout class for MultiPlayerView -->

      <!-- cells are added dynamically, based on grid_player_view_cell layout -->
    </GridLayout>
  </LinearLayout>
</merge>